@model IEnumerable<RolesIS.Models.Producto>

@{
    ViewBag.Title = "Pdoductos";
}

<h2>Productos</h2>


<table class="table">
   
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>

                <th>
                    Proveedor
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.Cantidad == 0)
                {
                    continue;
                }
                

                <tr>
                    <td>
                        @Html.ActionLink(item.Nombre, "Comprar", new { ProductoId = item.ProductoID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anunciante.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                </tr>
            }
   
</table>
