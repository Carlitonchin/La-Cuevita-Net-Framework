@model IEnumerable<RolesIS.Models.Producto>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<form method="post" action="@Url.Action("Filter")">
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" name="text" />
    </div>
    <div class="form-group">
        <label>Precio mínimo</label>
        <input type="number" name="minPrice" />
    </div>
    <div class="form-group">
        <label>Precio máximo</label>
        <input type="number" name="maxPrice" />
    </div>
    <div class="form-group">
        <label>Cantidad</label>
        <input type="number" name="amount" />
    </div>
    <br />
    <br />
    <input type="submit" value="Buscar" class="btn btn-primary" />
</form>

<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            Proveedor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

            @foreach (var item in Model)
            {
                if (item.Cantidad == 0)
                {
                    continue;
                }
                

                <tr>
                    <td>
                        @Html.ActionLink(item.Nombre, "Comprar", new { ProductoId = item.ProductoID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anunciante.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.ActionLink("Reportar", "Reportar", new { idProducto = item.ProductoID })
                    </td>
                </tr>
            }
   
</table>
