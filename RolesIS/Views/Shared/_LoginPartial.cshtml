@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active">
            <a class="nav-link" href="~/Manage">@User.Identity.GetUserName()</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active">
            <a class="nav-link" href="~/Account/Register">Registrarse</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="~/Account/Login">Iniciar Sesión</a>
        </li>
    </ul>
}
